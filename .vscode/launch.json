{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: g++ build and debug active file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/build/${fileBasenameNoExtension}", // 要调试的程序，与 tasks.json 中的输出一致
      "args": [], // 如果需要传递命令行参数，可以在这里设置，例如 ["arg1", "arg2"]
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false, // 使用 VS Code 的内置终端。如果遇到输入问题，可尝试设置为 true 使用外部终端
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "C/C++: g++ 生成活动文件", // 在启动调试前先执行的任务名称，必须与 tasks.json 中的 label 完全一致
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}